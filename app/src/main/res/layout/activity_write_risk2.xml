<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="th.go.rploei.riskandroid1.WriteRisk2Activity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            android:focusable="true"
            android:focusableInTouchMode="true"

            <TextView
                android:id="@+id/textViewWr21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ระบุเหตุการณ์"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewWr23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="textEnd" />

            <EditText
                android:id="@+id/editTextwr21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:hint="บรรยายเหตุการณ์ความเสี่ยง"
                android:inputType="textMultiLine"
                android:lines="5"
                android:maxLines="6"
                android:minLines="4"
                android:scrollbars="vertical" />

            <EditText
                android:id="@+id/editTextwr22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:hint="การแก้ไขเบื้องต้น"
                android:inputType="textMultiLine"
                android:lines="4"
                android:maxLines="5"
                android:minLines="3"
                android:scrollbars="vertical" />

            <EditText
                android:id="@+id/editTextwr23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:hint="ข้อเสนอแนะอื่นๆ เพื่อการแก้ไขป้องกัน"
                android:inputType="textPersonName"
                android:lines="4"
                android:maxLines="5"
                android:minLines="3"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ระดับความรุนแรง"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewwr22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="เลือกระดับความเสี่ยง"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonWr21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="เลือกระดับ" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonWr22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="บันทึกความเสี่ยง" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
