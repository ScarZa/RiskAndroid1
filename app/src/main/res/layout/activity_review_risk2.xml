<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="th.go.rploei.riskandroid1.ReviewRisk2Activity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            android:focusable="true"
            android:focusableInTouchMode="true"

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="การแก้ไขความเสี่ยง"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewrr21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="วันที่วิเคราะห์ความเสี่ยง"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/buttonrr21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="เลือกวันที่" />
            </LinearLayout>

            <EditText
                android:id="@+id/editTextrr21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="top|left"
                android:hint="ผลกระทบต่อบริการหรือหน่วยงาน"
                android:inputType="textMultiLine"
                android:lines="3"
                android:maxLines="4"
                android:minLines="2"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="วิเคราะห์สาเหตุที่เกิด"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/checkBoxrr21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ผู้ป่วย" />

            <CheckBox
                android:id="@+id/checkBoxrr22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="บุคลากร" />

            <CheckBox
                android:id="@+id/checkBoxrr23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="งานที่มอบหมาย" />

            <CheckBox
                android:id="@+id/checkBoxrr24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ทีมงาน" />

            <CheckBox
                android:id="@+id/checkBoxrr25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="เครื่องมือ" />

            <CheckBox
                android:id="@+id/checkBoxrr26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="วัฒนธรรม" />

            <CheckBox
                android:id="@+id/checkBoxrr27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="สิ่งแวดล้อม" />

            <CheckBox
                android:id="@+id/checkBoxrr28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="การสื่อสาร" />

            <CheckBox
                android:id="@+id/checkBoxrr29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ปัจจัยที่ควบคุมไม่ได้" />

            <EditText
                android:id="@+id/editTextrr22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="top|left"
                android:hint="สาเหตุของปัญหา"
                android:inputType="textMultiLine"
                android:lines="2"
                android:maxLines="3"
                android:minLines="1"
                android:scrollbars="vertical" />

            <EditText
                android:id="@+id/editTextrr23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="top|left"
                android:hint="มาตรการหรือแนวทางแก้ไข"
                android:inputType="textMultiLine"
                android:lines="2"
                android:maxLines="3"
                android:minLines="1"
                android:scrollbars="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewrr22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ระยะเวลาในการดำเนินการ"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonrr22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="เลือกระยะเวลา" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonrr23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="บันทึกการทบทวน" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
